@{
    ViewBag.Title = "Client Side Demo";
}

<div id="div" class="body-container">
    <label for="textbox">Please enter a phrase: </label>
    <input type="text" id="textbox" name="textbox" />
    <input type="submit" name="submit" value="submit" onClick="reversePhrase()" />
</div>
<div id="reset-div" class="body-container"></div>
<script type="text/javascript">
    function reversePhrase() {
        if (document.getElementById("textbox").value == "") {
            document.getElementById("div").innerHTML = "<p>Input is empty. Please try again.</p>";
