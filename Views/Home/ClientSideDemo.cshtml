        } else {
            var phrase = document.getElementById("textbox").value;
            var outputArray = phrase.split(" ");
            var output = "";
            outputArray = outputArray.reverse();
            for (var i = 0; i < outputArray.length; i++) {
                output = output + outputArray[i] + " ";
            }
            document.getElementById("div").innerHTML = "Your phrase in reverse order is: " + output;
            document.getElementById("reset-div").innerHTML = '<a href="ClientSideDemo">Reset</a>';
        }
    }
</script>
